{% extends 'base.html.twig' %}

{% block title %}Hello NavbarController!{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üß≠ Navbar</h2>
                </div>
            </div>

            {# Examples #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üí† Example</h2>
                </div>
                <div class="card-body">
                    <!--Navbar-->
                    <nav class="navbar navbar-primary">
                        <!-- Logo -->
                        <div>Lorem.</div>
                        <!-- Button for drop menu -->
                        <button class="navbar-btn btn btn-white"
                                data-js="collapse"
                                data-target="#navbar"
                                aria-controls="navbar"
                                aria-expanded="false">
                            Show menu
                        </button>
                        <!-- Collapse for drop menu -->
                        <div class="navbar-collapse" id="navbar">
                            <!-- Navbar list -->
                            <ul class="navbar-nav">
                                <li><a href="#">menu</a></li>
                                <li><a href="#">menu</a></li>
                                <li><a href="#">menu</a></li>
                                <li><a href="#">menu</a></li>
                                <li><a href="#">menu</a></li>
                                <li><a href="#">menu</a></li>
                                <li><a href="#">menu</a></li>
                                <li><a href="#">menu</a></li>
                            </ul>
                        </div>

                    </nav>
                </div>
            </div>

            {# HTML Code #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üíª HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-navbar', this);">Copy
                        </button>
                        <div data-js="code" id="code-navbar" class="container-code overflow-auto">
                            <nav class="navbar navbar-primary">
                                <div>Lorem.</div>
                                <button class="navbar-btn btn btn-white"
                                        data-js="collapse"
                                        data-target="#navbar-demo"
                                        aria-controls="navbar-demo"
                                        aria-expanded="false">
                                    Show menu
                                </button>
                                <div class="navbar-collapse" id="navbar-demo">
                                    <ul class="navbar-nav">
                                        <li><a href="#">menu</a></li>
                                        <li><a href="#">menu</a></li>
                                        <li><a href="#">menu</a></li>
                                        <li><a href="#">menu</a></li>
                                        <li><a href="#">menu</a></li>
                                        <li><a href="#">menu</a></li>
                                        <li><a href="#">menu</a></li>
                                        <li><a href="#">menu</a></li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

            {# Sizes #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üìè Sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Navbar size classes choose the breakpoint where the menu collapses into a button; each one includes the base navbar style and its own max-width value.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.navbar</code>
                                <p class="text-sm mt-1">Collapses at 76.8rem</p>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.navbar-xs</code>
                                <p class="text-sm mt-1">Collapses at 42.5rem</p>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.navbar-sm</code>
                                <p class="text-sm mt-1">Collapses at 57.6rem</p>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.navbar-md</code>
                                <p class="text-sm mt-1">Collapses at 76.8rem</p>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.navbar-lg</code>
                                <p class="text-sm mt-1">Collapses at 99.2rem</p>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.navbar-xl</code>
                                <p class="text-sm mt-1">Collapses at 120rem</p>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.navbar-xxl</code>
                                <p class="text-sm mt-1">Collapses at 140rem</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Alignment #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üìê Alignment</h2>
                </div>

                <div class="card-body">
                    <p class="mb-2">
                        Alignment is controlled via classes on
                        <code class="text-bold text-primary">.navbar-collapse</code>.
                        On desktop, you can align navigation items left, center, or right.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.nav-left</code>
                                <p class="text-sm mt-1">Aligns items to the left.</p>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.nav-center</code>
                                <p class="text-sm mt-1">Centers the navigation.</p>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.nav-right</code>
                                <p class="text-sm mt-1">Aligns items to the right.</p>
                            </div>
                        </div>
                    </div>

                    <p class="my-2">
                        When the navbar is collapsed (<code class="text-bold text-primary">.navbar-collapse.show</code>),
                        use the <code class="text-bold text-primary">*-collapse</code> variants to control alignment inside the dropdown.
                    </p>

                    <div class="row mt-2">

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.nav-left-collapse</code>
                                <p class="text-sm mt-1">
                                    Aligns items to the left <b>in collapsed mode</b>.
                                </p>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.nav-center-collapse</code>
                                <p class="text-sm mt-1">
                                    Centers items <b>in collapsed mode</b>.
                                </p>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.nav-right-collapse</code>
                                <p class="text-sm mt-1">
                                    Aligns items to the right <b>in collapsed mode</b>.
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            {# Color #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üé® Color</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-primary">
                                <code class="text-bold">.navbar-primary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-secondary">
                                <code class="text-bold">.navbar-secondary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-tertiary">
                                <code class="text-bold">.navbar-tertiary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-success">
                                <code class="text-bold">.navbar-success</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-danger">
                                <code class="text-bold">.navbar-danger</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-warning">
                                <code class="text-bold">.navbar-warning</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-info">
                                <code class="text-bold">.navbar-info</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-light">
                                <code class="text-bold">.navbar-light</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-dark">
                                <code class="text-bold">.navbar-dark</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-white">
                                <code class="text-bold">.navbar-white</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 navbar-black">
                                <code class="text-bold">.navbar-black</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# How it works #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è How it works</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        The script listens for clicks on
                        <code class="text-bold text-primary">[data-js="collapse"]</code>, toggles the
                        <code class="text-bold text-primary">.show</code> class on
                        <code class="text-bold text-primary">.navbar-collapse</code>,
                        and updates <code class="text-bold text-primary">aria-expanded</code>.
                        Each <code class="text-bold text-primary">.navbar-*</code> class defines the breakpoint
                        where the navbar switches to collapsed (burger) mode.
                    </p>
                </div>
            </div>

            {# Varibles #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        These variables control navbar border, radius, padding, and spacing between the collapse area and navigation items.
                    </p>

                    <table class="table">
                        <thead>
                        <tr class="text-left">
                            <th>Variable</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><code class="text-bold text-primary">--navbar-border</code></td>
                            <td>Base border definition applied to the navbar container.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--navbar-border-radius</code></td>
                            <td>Corner radius of the navbar.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--navbar-collapse-gap</code></td>
                            <td>Gap between elements inside <code class="text-bold text-primary">.navbar-collapse</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--navbar-nav-gap</code></td>
                            <td>Horizontal or vertical gap between items in <code class="text-bold text-primary">.navbar-nav</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--navbar-nav-margin</code></td>
                            <td>Margin applied to <code class="text-bold text-primary">.navbar-nav</code> in mobile layout.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--navbar-padding</code></td>
                            <td>Inner padding of the navbar container.</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
