{% extends 'base.html.twig' %}

{% block title %}Badges â€” Demo{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Badge #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>ğŸ·ï¸ Badge</h2>
                </div>
            </div>

            {# Badge Examples #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>ğŸ’  Examples</h2>
                </div>
                <div class="card-body d-flex fd-column gap-1">
                    <div class="badge-group">
                        <span class="badge badge-success">Badge success</span>
                        <span class="badge outline-success">Badge outline-success</span>
                        <span class="badge badge-success rounded-pill">Badge success rounded-pill</span>
                        <span class="badge-sm badge-success">Badge small</span>
                        <span class="badge-md badge-success">Badge medium</span>
                        <span class="badge-lg badge-success">Badge large</span>
                    </div>
                </div>
            </div>

            {# HTML Code #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>ğŸ’» HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-badge', this);">Copy
                        </button>
                        <div data-js="code" id="code-badge" class="container-code overflow-auto">
                            <span class="badge badge-success">Badge success</span>
                            <span class="badge outline-success">Badge outline-success</span>
                            <span class="badge badge-success rounded-pill">Badge success rounded-pill</span>
                            <span class="badge-sm badge-success">Badge small</span>
                            <span class="badge-md badge-success">Badge medium</span>
                            <span class="badge-lg badge-success">Badge large</span>
                        </div>
                    </div>
                </div>
            </div>

            {# Sizes #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>ğŸ“ Sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Each class (<code class="text-bold text-primary">.badge</code>, <code class="text-bold text-primary">.badge-sm</code>, <code class="text-bold text-primary">.badge-md</code>, <code class="text-bold text-primary">.badge-lg</code>) includes the base badge style with its own padding.
                    </p>
                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-sm</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-md</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Type #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>ğŸ§µ Type</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Use <code class="text-bold text-primary">.badge-{color}</code> for solid badge, <code class="text-bold text-primary">.badge-{color}</code> for bordered styles, and <code class="text-bold text-primary">.rounded-pill</code> for softer shapes.
                    </p>
                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.outline-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.rounded-pill</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Color #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>ğŸ¨ Color</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Use <code class="text-bold text-primary">.badge-{color}</code> to set both the background and the matching text color, based on your theme variables.
                    </p>
                    <div class="row">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-primary">
                                <code class="text-bold">.badge-primary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-secondary">
                                <code class="text-bold">.badge-secondary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-tertiary">
                                <code class="text-bold">.badge-tertiary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-success">
                                <code class="text-bold">.badge-success</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-danger">
                                <code class="text-bold">.badge-danger</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-warning">
                                <code class="text-bold">.badge-warning</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-info">
                                <code class="text-bold">.badge-info</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-light">
                                <code class="text-bold">.badge-light</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-dark">
                                <code class="text-bold">.badge-dark</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-white">
                                <code class="text-bold">.badge-white</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 badge-black">
                                <code class="text-bold">.badge-black</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Note about badge-group #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>ğŸ“Œ Note badge-group</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Use <code class="text-bold text-primary">.badge-group</code> to display several badges on the same line
                        with consistent spacing.
                        The container automatically:
                    </p>
                </div>
            </div>

            {# Varibles #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>âš™ï¸ Variables CSS</h2>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr class="text-left">
                            <th>Variable</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><code class="text-bold text-primary">--badge-border-radius</code></td>
                            <td>Corner radius applied to all badge variants (including sized badges).</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--badge-group-gap</code></td>
                            <td>Space between badges inside <code class="text-bold text-primary">.badge-group</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--badge-padding</code></td>
                            <td>Default padding for the base <code class="text-bold text-primary">.badge</code> size.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--badge-padding-sm</code></td>
                            <td>Padding used by <code class="text-bold text-primary">.badge-sm</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--badge-padding-md</code></td>
                            <td>Padding used by <code class="text-bold text-primary">.badge-md</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--badge-padding-lg</code></td>
                            <td>Padding used by <code class="text-bold text-primary">.badge-lg</code>.</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
