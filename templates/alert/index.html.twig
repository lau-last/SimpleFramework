{% block javascripts %}
    <script>
        const alertMessages = {
            danger: '‚ö†Ô∏è An error has occurred!',
            success: '‚úì Operation successful',
            warning: '‚ö° Warning, action required',
            info: '‚ÑπÔ∏è Important information'
        };

        function showAlert(type) {
            if (!type) return;
            const container = document.getElementById('alert-demo');
            if (!container) return;
            const alert = document.createElement('div');
            const button = document.createElement('button');
            alert.className = `alert alert-${type}`;
            button.className = `close btn btn-${type}`;
            alert.textContent = alertMessages[type];
            button.textContent = 'x';
            alert.appendChild(button);
            container.appendChild(alert);
            alert.addEventListener('animationend', () => {
                alert.remove();
            });
            button.addEventListener('click', () => {
                alert.remove();
            });
        }
    </script>
{% endblock %}
