{% extends 'base.html.twig' %}

{% block title %}Badges â€” Demo{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>ğŸ·ï¸ Badge</h2>
                </div>
            </article>

            {# Examples #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>ğŸ’  Examples</h2>
                </div>
                <div class="card-body d-flex fd-column gap-1">
                    <div class="badge-group">
                        <span class="badge badge-primary">Badge primary</span>
                        <span class="badge outline-primary">Badge outline-primary</span>
                        <span class="badge badge-primary rounded-pill">Badge primary rounded-pill</span>
                        <span class="badge-sm badge-primary">Badge small</span>
                        <span class="badge-md badge-primary">Badge medium</span>
                        <span class="badge-lg badge-primary">Badge large</span>
                    </div>
                </div>
            </article>

            {# HTML Code #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>ğŸ’» HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-badge', this);">Copy
                        </button>
                        <div data-js="code" id="code-badge" class="container-code overflow-auto">
                            <span class="badge badge-primary">Badge primary</span>
                            <span class="badge outline-primary">Badge outline-primary</span>
                            <span class="badge badge-primary rounded-pill">Badge primary rounded-pill</span>
                            <span class="badge-sm badge-primary">Badge small</span>
                            <span class="badge-md badge-primary">Badge medium</span>
                            <span class="badge-lg badge-primary">Badge large</span>
                        </div>
                    </div>
                </div>
            </article>

            {# Sizes #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>ğŸ“ Sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Each class (<code class="text-bold text-primary">.badge</code>, <code
                            class="text-bold text-primary">.badge-sm</code>, <code class="text-bold text-primary">.badge-md</code>,
                        <code class="text-bold text-primary">.badge-lg</code>) includes the base badge style with its
                        own padding.
                    </p>
                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-sm</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-md</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# Type #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>ğŸ§µ Type</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Use <code class="text-bold text-primary">.badge-{color}</code> for solid badge, <code
                            class="text-bold text-primary">.badge-{color}</code> for bordered styles, and <code
                            class="text-bold text-primary">.rounded-pill</code> for softer shapes.
                    </p>
                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.badge-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.outline-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.rounded-pill</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>


            {# Note about badge-group #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>ğŸ“Œ Note badge-group</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Use <code class="text-bold text-primary">.badge-group</code> to display several badges on the
                        same line
                        with consistent spacing.
                        The container automatically:
                    </p>
                </div>
            </article>

            {# Variables #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>âš™ï¸ Variables CSS</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr class="text-left">
                                <th>Variable</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-border-color</code></td>
                                <td>Border color of the badge.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-border-radius</code></td>
                                <td>Corner radius of the badge.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-border-style</code></td>
                                <td>Border style of the badge.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-border-width</code></td>
                                <td>Thickness of the badge border.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-group-gap</code></td>
                                <td>Gap between badges inside a badge group.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-padding</code></td>
                                <td>Default padding inside the badge.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-padding-lg</code></td>
                                <td>Padding for large-sized badges.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-padding-md</code></td>
                                <td>Padding for medium-sized badges.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--badge-padding-sm</code></td>
                                <td>Padding for small-sized badges.</td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </article>

        </div>
    </div>
{% endblock %}
