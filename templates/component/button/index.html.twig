{% extends 'base.html.twig' %}

{% block title %}Buttons ‚Äî Demo{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üñ±Ô∏è Button</h2>
                </div>
            </article>

            {# Examples #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üí† Examples</h2>
                </div>
                <div class="card-body d-flex fd-column gap-1">
                    <div class="btn-group">
                        <button class="btn btn-primary">Button</button>
                        <button class="btn link-primary">Button link</button>
                        <button class="btn outline-primary">Button outline</button>
                        <button class="btn btn-primary rounded-pill">Button rounded-pill</button>
                        <button class="btn btn-primary btn-sm">Button small</button>
                        <button class="btn btn-primary btn-md">Button medium</button>
                        <button class="btn btn-primary btn-lg">Button large</button>
                    </div>
                </div>
            </article>

            {# HTML Code #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üíª HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-button', this);">Copy
                        </button>
                        <div data-js="code" id="code-button" class="container-code overflow-auto">
                            <button class="btn btn-primary">Button</button>
                            <button class="btn link-primary">Button link</button>
                            <button class="btn outline-primary">Button outline</button>
                            <button class="btn btn-primary rounded-pill">Button rounded-pill</button>
                            <button class="btn btn-primary btn-sm">Button small</button>
                            <button class="btn btn-primary btn-md">Button medium</button>
                            <button class="btn btn-primary btn-lg">Button large</button>
                        </div>
                    </div>
                </div>
            </article>

            {# Sizes #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìè Sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Each class (<code class="text-bold text-primary">.btn</code>, <code
                            class="text-bold text-primary">.btn-sm</code>, <code
                            class="text-bold text-primary">.btn-md</code>, <code
                            class="text-bold text-primary">.btn-lg</code>) includes the base button style with its own
                        padding.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-sm</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-md</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# Type #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üßµ Type</h2>
                </div>
                <div class="card-body">

                    <p class="p-1">
                        Use <code class="text-bold text-primary">.btn-{color}</code> for solid buttons, <code
                            class="text-bold text-primary">.outline-{color}</code> for bordered styles, and <code
                            class="text-bold text-primary">.rounded-pill</code> for softer shapes.
                        <code class="text-bold text-primary">.link-{color}</code> gives a minimal, text-styled button
                        using the theme color.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.outline-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.rounded-pill</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.link-{color}</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>


            {# Note about badge-group #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìå Note btn-group</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Use <code class="text-bold text-primary">.btn-group</code> to display several button on the same
                        line
                        with consistent spacing.
                        The container automatically:
                    </p>
                </div>
            </article>

            {# Variables #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr class="text-left">
                                <th>Variable</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td><code class="text-bold text-primary">--button-active-bg-color</code></td>
                                <td>Background color applied when the button is active or pressed.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-border-color</code></td>
                                <td>Border color of the button.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-border-radius</code></td>
                                <td>Corner radius of the button.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-border-style</code></td>
                                <td>Border style of the button (solid, dashed, etc.).</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-border-width</code></td>
                                <td>Thickness of the button border.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-group-gap</code></td>
                                <td>Gap between buttons inside a button group.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-hover-bg-color</code></td>
                                <td>Background color applied when hovering the button.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-padding</code></td>
                                <td>Default padding inside the button.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-padding-lg</code></td>
                                <td>Padding for large-sized buttons.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-padding-md</code></td>
                                <td>Padding for medium-sized buttons.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--button-padding-sm</code></td>
                                <td>Padding for small-sized buttons.</td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </article>

        </div>
    </div>
{% endblock %}
