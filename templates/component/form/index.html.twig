                                <div class="form-control">
                                    <label for="date">Date</label>
                                    <input type="date" id="date">
                                </div>

                                <div class="form-control">
                                    <label for="datetime-local">Datetime Local</label>
                                    <input type="datetime-local" id="datetime-local">
                                </div>

                                <div class="form-control">
                                    <label for="email">Email</label>
                                    <input type="email" id="email" autocomplete="email">
                                </div>

                                <div class="form-control">
                                    <label for="file">File</label>
                                    <input type="file" id="file">
                                </div>

                                <div class="form-control">
                                    <label for="month">Month</label>
                                    <input type="month" id="month">
                                </div>

                                <div class="form-control">
                                    <label for="number">Number</label>
                                    <input type="number" id="number">
                                </div>

                                <div class="form-control">
                                    <label for="password">Password</label>
                                    <input type="password" id="password">
                                </div>

                                <div class="form-control">
                                    <label for="search">Search</label>
                                    <input type="search" id="search">
                                </div>

                                <div class="form-control">
                                    <label for="tel">Tel</label>
                                    <input type="tel" id="tel" autocomplete="tel">
                                </div>

                                <div class="form-control">
                                    <label for="text">Text</label>
                                    <input type="text" id="text">
                                </div>

                                <div class="form-control">
                                    <label for="time">Time</label>
                                    <input type="time" id="time">
                                </div>

                                <div class="form-control">
                                    <label for="url">URL</label>
                                    <input type="url" id="url">
                                </div>

                                <div class="form-control">
                                    <label for="week">Week</label>
                                    <input type="week" id="week">
                                </div>

                                <div class="form-control">
                                    <label for="select">Select</label>
                                    <select id="select">
                                        <option value="">Choose an option</option>
                                        <option value="opt1">Option 1</option>
                                        <option value="opt2">Option 2</option>
                                        <option value="opt3">Option 3</option>
                                    </select>
                                </div>

                                <div class="form-control">
                                    <label for="color">Color</label>
                                    <input type="color" id="color">
                                </div>

                                <div class="form-control">
                                    <label for="checkbox">Checkbox</label>
                                    <input type="checkbox" id="checkbox">
                                </div>

                                <div class="form-control">
                                    <label for="radio">Radio</label>
                                    <input type="radio" id="radio">
                                </div>

                                <div class="form-control">
                                    <label for="switch">Switch</label>
                                    <input id="switch" role="switch" type="checkbox">
                                </div>

                                <div class="form-control">
                                    <label for="range">Range</label>
                                    <input type="range" id="range">
                                </div>

                                <div class="form-control">
                                    <label for="message">Message</label>
                                    <textarea id="message" rows="4"></textarea>
                                </div>

                                <div class="form-control">
                                    <label for="image">Image</label>
                                    <input type="image" id="image" alt="image"
                                           src="https://placehold.co/120x40.jpg?text=Submit">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            {# Input sizes #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üìè Input sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Input size is controlled by the wrapper. Use <code
                            class="text-bold text-primary">.form-control</code> for the default size, or <code
                            class="text-bold text-primary">.form-control-sm</code>, <code
                            class="text-bold text-primary">.form-control-md</code>, and <code
                            class="text-bold text-primary">.form-control-lg</code> for smaller or larger fields.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.form-control</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.form-control-sm</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.form-control-md</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.form-control-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Form inline #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üìè Inline Forms</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        By default, labels and inputs are displayed vertically: the label appears above the field.
                        If you want a horizontal layout instead, <br>wrap your label and input inside
                        <code class="text-bold text-primary">.form-inline</code>.
                        This class aligns both elements side by side while keeping the spacing consistent.
                    </p>
                </div>
            </div>

            {# How it works #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è How it works</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        The script listens to <code class="text-bold text-primary">submit</code> events on forms with
                        <code class="text-bold text-primary">data-js="validate"</code>, uses the browser‚Äôs native <code
                            class="text-bold text-primary">checkValidity()</code>, and prevents submit if the form is
                        invalid while adding <code class="text-bold text-primary">.validated</code> so CSS can style
                        valid and invalid fields.
                    </p>
                </div>
            </div>

            {# How to use #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üõ†Ô∏è How to use</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Add <code class="text-bold text-primary">data-js="validate"</code> to your form, set <code
                            class="text-bold text-primary">required</code> or other HTML constraints on fields, and wrap
                        each label‚Äìfield pair in <code class="text-bold text-primary">.form-control</code>. Use the
                        <code class="text-bold text-primary">novalidate</code> attribute on the form if you want to
                        disable native browser error popups and let the component handle validation UI.
                    </p>
                </div>
            </div>

            {# Variables #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">These variables control input size, spacing, borders, colors, and extra elements like
                        range, select and switch.</p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr class="text-left">
                                <th>Variable</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td><code class="text-bold text-primary">--gap-form-inline</code></td>
                                <td>Gap between inline form elements.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-bg-color</code></td>
                                <td>Input background color.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-border</code></td>
                                <td>Full input border (color, width, style).</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-border-radius</code></td>
                                <td>Corner radius of the input.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-box-shadow-focus</code></td>
                                <td>Shadow applied when the input is focused.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-height</code></td>
                                <td>Default input height.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-height-sm</code></td>
                                <td>Height for small inputs.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-height-md</code></td>
                                <td>Height for medium inputs.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-height-lg</code></td>
                                <td>Height for large inputs.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-margin</code></td>
                                <td>Space below the input inside <code>.form-control</code>.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-padding</code></td>
                                <td>Internal padding of the input.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-placeholder-color</code></td>
                                <td>Placeholder text color.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-size</code></td>
                                <td>Default font size inside inputs.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-size-sm</code></td>
                                <td>Font size for small inputs.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-size-md</code></td>
                                <td>Font size for medium inputs.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-size-lg</code></td>
                                <td>Font size for large inputs.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--input-text-color</code></td>
                                <td>Input text color.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--range-size</code></td>
                                <td>Height of the range slider.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--range-size-sm</code></td>
                                <td>Height for small sliders.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--range-size-md</code></td>
                                <td>Height for medium sliders.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--range-size-lg</code></td>
                                <td>Height for large sliders.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--select-padding</code></td>
                                <td>Padding inside select elements.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--switch-size</code></td>
                                <td>Base size of the switch component.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--switch-size-sm</code></td>
                                <td>Size for small switches.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--switch-size-md</code></td>
                                <td>Size for medium switches.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--switch-size-lg</code></td>
                                <td>Size for large switches.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--textarea-padding</code></td>
                                <td>Padding inside textareas.</td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
