{% extends 'base.html.twig' %}

{% block title %}Hello FormController!{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üìù Form fields</h2>
                </div>
            </div>

            {# Examples #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üí† Examples</h2>
                </div>

                <div class="card-body">
                    <form action="" method="POST" data-js="validate" novalidate>
                        <div class="row">
                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="date">Date</label>
                                    <input type="date" id="date" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="datetime-local">Datetime Local</label>
                                    <input type="datetime-local" id="datetime-local" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="email">Email</label>
                                    <input type="email" id="email" value="test@example.com" autocomplete="email"
                                           required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="file">File</label>
                                    <input type="file" id="file" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="month">Month</label>
                                    <input type="month" id="month" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="number">Number</label>
                                    <input type="number" id="number" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="password">Password</label>
                                    <input type="password" id="password" value="1234" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="search">Search</label>
                                    <input type="search" id="search" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="tel">Tel</label>
                                    <input type="tel" id="tel" autocomplete="tel" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="text">Text</label>
                                    <input type="text" id="text" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="time">Time</label>
                                    <input type="time" id="time" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="url">URL</label>
                                    <input type="url" id="url" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="week">Week</label>
                                    <input type="week" id="week" required>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="select">Select</label>
                                    <select id="select" required>
                                        <option value="">Choose an option</option>
                                        <option value="opt1">Option 1</option>
                                        <option value="opt2">Option 2</option>
                                        <option value="opt3">Option 3</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="color">Color</label>
                                    <input type="color" id="color">
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="checkbox">Checkbox</label>
                                    <input type="checkbox" id="checkbox">
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="radio">Radio</label>
                                    <input type="radio" id="radio">
                                </div>
                            </div>

                            <div class="col-12 col-6-xs col-4-sm">
                                <div class="form-control">
                                    <label for="switch">Switch</label>
                                    <input id="switch" role="switch" type="checkbox">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-control">
                                    <label for="range">Range</label>
                                    <input type="range" id="range">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-control">
                                    <label for="message">Message</label>
                                    <textarea id="message" rows="4" required></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-control">
                                    <label for="image">Image</label>
                                    <input type="image" id="image" alt="image"
                                           src="https://placehold.co/120x40.jpg?text=Submit">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            {# HTML Code #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üíª HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
