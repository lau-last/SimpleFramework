{% extends 'base.html.twig' %}

{% block title %}Hello ListController!{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìù List</h2>
                </div>
            </article>

            {# Quick examples #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üí† Examples</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-4-xs">
                            <ul class="list list-primary list-borderless">
                                <li class="list-item">list-borderless</li>
                                <li class="list-item">list-borderless</li>
                                <li class="list-item">list-borderless</li>
                                <li class="list-item">list-borderless</li>
                            </ul>
                        </div>
                        <div class="col-12 col-4-xs">
                            <ul class="list list-primary">
                                <li class="list-item">List</li>
                                <li class="list-item">List</li>
                                <li class="list-item">List</li>
                                <li class="list-item">List</li>
                            </ul>
                        </div>
                        <div class="col-12 col-4-xs">
                            <ul class="list list-primary list-bordered">
                                <li class="list-item">List-bordered</li>
                                <li class="list-item">List-bordered</li>
                                <li class="list-item">List-bordered</li>
                                <li class="list-item">List-bordered</li>
                            </ul>
                        </div>
                        <div class="col-12 col-4-xs">
                            <ul class="list list-primary list-hover">
                                <li class="list-item">List hover with link</li>
                                <li class="list-item">List hover with link</li>
                                <li class="list-item">List hover with link</li>
                                <li class="list-item">List hover with link</li>
                            </ul>
                        </div>
                        <div class="col-12 col-4-xs">
                            <ul class="list list-hover">
                                <li class="list-item"><a href="#" class="list-link">List hover</a></li>
                                <li class="list-item list-primary"><a href="#" class="list-link">List hover</a></li>
                                <li class="list-item list-secondary"><a href="#" class="list-link">List hover</a></li>
                                <li class="list-item list-tertiary"><a href="#" class="list-link">List hover</a></li>
                            </ul>
                        </div>
                        <div class="col-12 col-4-xs">
                            <ul class="list">
                                <li class="list-item active">List active</li>
                                <li class="list-item list-primary list-hover">List hover</li>
                                <li class="list-item list-secondary">List</li>
                                <li class="list-item list-tertiary list-hover">List hover</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </article>

            {# HTML Code #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üíª HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-list', this);">Copy
                        </button>
                        <div data-js="code" id="code-list" class="container-code overflow-auto">
                            <ul class="list list-primary list-borderless">
                                <li class="list-item">list-borderless</li>
                                <li class="list-item">list-borderless</li>
                                <li class="list-item">list-borderless</li>
                                <li class="list-item">list-borderless</li>
                            </ul>

                            <ul class="list list-primary">
                                <li class="list-item">List</li>
                                <li class="list-item">List</li>
                                <li class="list-item">List</li>
                                <li class="list-item">List</li>
                            </ul>

                            <ul class="list list-primary list-hover">
                                <li class="list-item">List hover with link</li>
                                <li class="list-item">List hover with link</li>
                                <li class="list-item">List hover with link</li>
                                <li class="list-item">List hover with link</li>
                            </ul>

                            <ul class="list list-hover">
                                <li class="list-item"><a href="#" class="list-link">List hover</a></li>
                                <li class="list-item list-primary"><a href="#" class="list-link">List hover</a></li>
                                <li class="list-item list-secondary"><a href="#" class="list-link">List hover</a></li>
                                <li class="list-item list-tertiary"><a href="#" class="list-link">List hover</a></li>
                            </ul>

                            <ul class="list list-hover">
                                <li class="list-item">List hover 2</li>
                                <li class="list-item list-primary">List hover 2</li>
                                <li class="list-item list-secondary">List hover 2</li>
                                <li class="list-item list-tertiary">List hover 2</li>
                            </ul>

                            <ul class="list">
                                <li class="list-item active">List active</li>
                                <li class="list-item list-primary list-hover">List hover</li>
                                <li class="list-item list-secondary">List</li>
                                <li class="list-item list-tertiary list-hover">List hover</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </article>

            {# Link rules #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üîó Link rules</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        When your list contains links or interactive elements, make sure to wrap them inside
                        <code class="text-bold text-primary">.list-link</code>.
                        This class ensures that padding and spacing are applied correctly on the link itself,
                        not on <code class="text-bold text-primary">.list-item</code>.
                    </p>
                </div>
            </article>

            {# Sizes #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìè Sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        These classes apply only to lists. Each size includes the base list style and its own spacing
                        variables.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.list</code>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.list-sm</code>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.list-md</code>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.list-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# Colors #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üé® Colors</h2>
                </div>

                <div class="card-body">
                    <p class="p-1">
                        Choose the list color by applying the corresponding class to your element.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.list-{color}</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# Variables #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr class="text-left">
                                <th>Variable</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td><code class="text-bold text-primary">--list-bg-color</code></td>
                                <td>Background color of the list container.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-border-color</code></td>
                                <td>Border color of the list container.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-border-radius</code></td>
                                <td>Corner radius of the list container.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-border-style</code></td>
                                <td>Style of the list border.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-border-width</code></td>
                                <td>Thickness of the list border.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-border-width-inside-hover</code></td>
                                <td>Border thickness applied inside list items on hover.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-column-gap</code></td>
                                <td>Gap between list columns.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-inline-gap</code></td>
                                <td>Gap between list items arranged inline.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-active-bg-color</code></td>
                                <td>Background color of list items when active.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-border-color</code></td>
                                <td>Border color applied to list items.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-border-style</code></td>
                                <td>Border style applied to list items.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-border-width</code></td>
                                <td>Border width applied to list items.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-hover-bg-color</code></td>
                                <td>Background color of list items on hover.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-padding</code></td>
                                <td>Default padding applied to list items.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-padding-lg</code></td>
                                <td>Padding for large-sized list items.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-padding-md</code></td>
                                <td>Padding for medium-sized list items.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-item-padding-sm</code></td>
                                <td>Padding for small-sized list items.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--list-text-color</code></td>
                                <td>Text color used inside the list.</td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </article>

        </div>
    </div>
{% endblock %}
