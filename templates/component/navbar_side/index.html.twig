{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const switchPush = document.getElementById('push-side-right');
            const sideRight = document.getElementById('side-right');

            const btnRevealShrink = document.getElementById('reveal-shrink-right');
            const switchPushShrink = document.getElementById('push-shrink-right');
            const shrinkRight = document.getElementById('shrink-right');

            switchPush.addEventListener('change', function () {
                sideRight.classList.toggle('push', this.checked);
            });

            btnRevealShrink.addEventListener('click', function () {
                shrinkRight.classList.toggle('hide-shrink-right');
            });

            switchPushShrink.addEventListener('change', function () {
                shrinkRight.classList.toggle('push', this.checked);
            });

        })
    </script>
{% endblock %}


