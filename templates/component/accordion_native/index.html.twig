{% extends 'base.html.twig' %}

{% block title %}Accordion native{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <article class="card p-2">
                <div class="card-header d-flex ai-baseline">
                    <h2>üóÇÔ∏è Accordion native</h2>
                    <span class="ml-1">(Without JavaScript)</span>
                </div>
            </article>

            {# Example #}
            <article class="card p-2">
                <div class="card-header d-flex ai-baseline">
                    <h2>üí† Example</h2>
                    <span class="ml-1">(Multiple)</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="accordion-native">
                                {% for i in 1..3 %}
                                    <details class="accordion-item" {{ i == 1 ? 'open' : '' }}>
                                        <summary class="accordion-btn btn-primary">
                                            Multiple
                                        </summary>
                                        <div class="accordion-body">
                                            <p class="p-1">
                                                Some content
                                            </p>
                                        </div>
                                    </details>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# HTML Code #}
            <article class="card p-2">
                <div class="card-header d-flex ai-baseline">
                    <h2>üíª HTML Code</h2>
                    <span class="ml-1">(Multiple)</span>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-accordion-native-multiple', this);">Copy
                        </button>
                        <div data-js="code" id="code-accordion-native-multiple" class="container-code overflow-auto">
                            <div class="accordion-native">
                                <details class="accordion-item" open>
                                    <summary class="accordion-btn btn-primary">
                                        Multiple
                                    </summary>
                                    <div class="accordion-body">
                                        <p class="p-1">
                                            Some content
                                        </p>
                                    </div>
                                </details>
                                <details class="accordion-item">
                                    <summary class="accordion-btn btn-primary">
                                        Multiple
                                    </summary>
                                    <div class="accordion-body">
                                        <p class="p-1">
                                            Some content
                                        </p>
                                    </div>
                                </details>
                                <details class="accordion-item">
                                    <summary class="accordion-btn btn-primary">
                                        Multiple
                                    </summary>
                                    <div class="accordion-body">
                                        <p class="p-1">
                                            Some content
                                        </p>
                                    </div>
                                </details>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# Sizes #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìè Sizes</h2>
                </div>
                <div class="card-body">
                    These classes apply only to the accordion buttons.
                    Each one already includes both the style and the size, so just pick the one you need.
                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.accordion-btn</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.accordion-btn-sm</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.accordion-btn-md</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.accordion-btn-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# Colors #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üé® Colors</h2>
                </div>
                <div class="card-body">
                    Button colors and accordion borders are handled separately.
                    Apply these classes directly on the element you want to style.

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">btn-{color}</code>
                                <br><small>Apply on the button <br>(with hover)</small>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">bg-{color}</code>
                                <br><small>Apply on the button <br>(no hover)</small>
                            </div>
                        </div>

                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">accordion-{color}</code>
                                <br><small>Apply on the <code>.accordion-native</code> container <br>(borders only)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# State #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìå State</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        To keep a panel open on page load, add the
                        <code class="text-bold text-primary">open</code> attribute on the <code class="text-bold text-primary">details</code> element.
                    </p>
                </div>
            </article>

            {# Varibles #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr class="text-left">
                                <th>Class</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-bg-color</code></td>
                                <td>Background color of the accordion.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-border-color</code></td>
                                <td>Color of the borders.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-border-radius</code></td>
                                <td>Corner radius.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-border-style</code></td>
                                <td>Border style (solid, dashed, etc.).</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-border-width</code></td>
                                <td>Border thickness.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-button-padding</code></td>
                                <td>Default button padding.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-button-padding-lg</code></td>
                                <td>Padding for large buttons.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-button-padding-md</code></td>
                                <td>Padding for medium buttons.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--accordion-button-padding-sm</code></td>
                                <td>Padding for small buttons.</td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </article>

        </div>
    </div>
{% endblock %}
