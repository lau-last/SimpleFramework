{% extends 'base.html.twig' %}

{% block title %}Hello CollapseController!{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <article class="card p-2">
                <div class="card-header d-flex ai-baseline">
                    <h2>üìÇ Collapse</h2>
                    <span class="ml-1">(With JavaScript)</span>
                </div>
            </article>

            {# Example #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üí† Example</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="collapse">
                                <button class="collapse-btn btn-primary" data-js="collapse" data-target="#collapse-1"
                                        aria-controls="collapse-1" aria-expanded="false">Collapse
                                </button>
                                <div class="collapse-body" id="collapse-1">
                                    <p class="p-1">
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Assumenda minima
                                        repellat
                                        reprehenderit unde? Blanditiis consequatur debitis doloremque, ea eligendi enim
                                        est hic, id
                                        inventore minima non officiis quo unde. Deserunt. Lorem ipsum dolor sit amet,
                                        consectetur adipisicing elit. Assumenda minima repellat
                                        reprehenderit unde? Blanditiis consequatur debitis doloremque, ea eligendi enim
                                        est hic, id
                                        inventore minima non officiis quo unde. Deserunt.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# HTML Code #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üíª HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-collapse', this);">Copy
                        </button>
                        <div data-js="code" id="code-collapse" class="container-code overflow-auto">
                            <div class="collapse">
                                <button class="collapse-btn btn-primary" data-js="collapse" data-target="#collapse-1"
                                        aria-controls="collapse-1" aria-expanded="false">Collapse
                                </button>
                                <div class="collapse-body" id="collapse-1">
                                    <p class="p-1">
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Assumenda minima
                                        repellat
                                        reprehenderit unde? Blanditiis consequatur debitis doloremque, ea eligendi enim
                                        est hic, id
                                        inventore minima non officiis quo unde. Deserunt.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# Sizes #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìè Sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Each size class (<code class="text-bold text-primary">.collapse-btn</code>,
                        <code class="text-bold text-primary">.collapse-btn-sm</code>,
                        <code class="text-bold text-primary">.collapse-btn-md</code>,
                        <code class="text-bold text-primary">.collapse-btn-lg</code>) includes the base collapse button
                        style with its own padding values.
                    </p>
                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.collapse-btn</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.collapse-btn-sm</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.collapse-btn-md</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.collapse-btn-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </article>

            {# How to use #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üß© How to use</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Add <code class="text-bold text-primary">data-js="collapse"</code> to the button and set
                        <code class="text-bold text-primary">data-target</code> to the ID of the matching
                        <code class="text-bold text-primary">.collapse-body</code>. The script toggles the panel and
                        updates
                        <code class="text-bold text-primary">aria-expanded</code> automatically.
                    </p>
                </div>
            </article>

            {# Note open state #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìå Default open state</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        To open a collapse by default, add the
                        <code class="text-bold text-primary">.show</code> class to the
                        <code class="text-bold text-primary">.collapse-body</code> in your HTML.
                    </p>
                </div>
            </article>

            {# Notes about spacing #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>üìå Note spacing rules</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Do not set <code class="text-bold text-primary">padding</code> or
                        <code class="text-bold text-primary">margin</code> on
                        <code class="text-bold text-primary">.collapse-body</code>, as this container is reset and
                        spacing there will not behave as expected.
                        Add spacing to elements inside the body (for example a <code
                            class="text-bold text-primary">p</code>,
                        <code class="text-bold text-primary">ul</code> or an inner wrapper), not on
                        <code class="text-bold text-primary">.collapse-body</code> itself.
                    </p>
                </div>
            </article>

            {# Variables #}
            <article class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr class="text-left">
                                <th>Variable</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-bg-color</code></td>
                                <td>Background color of the collapse container.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-border-color</code></td>
                                <td>Border color of the collapse container.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-border-radius</code></td>
                                <td>Corner radius of the collapse container.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-border-style</code></td>
                                <td>Border style of the collapse container.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-border-width</code></td>
                                <td>Thickness of the collapse border.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-button-padding</code></td>
                                <td>Default padding inside the collapse button.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-button-padding-lg</code></td>
                                <td>Padding for large-sized collapse buttons.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-button-padding-md</code></td>
                                <td>Padding for medium-sized collapse buttons.</td>
                            </tr>

                            <tr>
                                <td><code class="text-bold text-primary">--collapse-button-padding-sm</code></td>
                                <td>Padding for small-sized collapse buttons.</td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </article>

        </div>
    </div>
{% endblock %}
