{% extends 'base.html.twig' %}

{% block title %}Buttons ‚Äî Demo{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üñ±Ô∏è Button</h2>
                </div>
            </div>

            {# Examples #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üí† Examples</h2>
                </div>
                <div class="card-body d-flex fd-column gap-1">
                    <div class="btn-group">
                        <button class="btn btn-success">Button</button>
                        <button class="btn link-success">Button link</button>
                        <button class="btn outline-success">Button outline</button>
                        <button class="btn btn-success rounded-pill">Button rounded-pill</button>
                        <button class="btn btn-success btn-sm">Button small</button>
                        <button class="btn btn-success btn-md">Button medium</button>
                        <button class="btn btn-success btn-lg">Button large</button>
                    </div>
                </div>
            </div>

            {# HTML Code #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üíª HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-button', this);">Copy
                        </button>
                        <div data-js="code" id="code-button" class="container-code overflow-auto">
                            <button class="btn btn-success">Button</button>
                            <button class="btn link-success">Button link</button>
                            <button class="btn outline-success">Button outline</button>
                            <button class="btn btn-success rounded-pill">Button rounded-pill</button>
                            <button class="btn btn-success btn-sm">Button small</button>
                            <button class="btn btn-success btn-md">Button medium</button>
                            <button class="btn btn-success btn-lg">Button large</button>
                        </div>
                    </div>
                </div>
            </div>

            {# Sizes #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üìè Sizes</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Each class (<code class="text-bold text-primary">.btn</code>, <code
                            class="text-bold text-primary">.btn-sm</code>, <code
                            class="text-bold text-primary">.btn-md</code>, <code
                            class="text-bold text-primary">.btn-lg</code>) includes the base button style with its own
                        padding.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-sm</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-md</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-lg</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Type #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üßµ Type</h2>
                </div>
                <div class="card-body">

                    <p class="p-1">
                        Use <code class="text-bold text-primary">.btn-{color}</code> for solid buttons, <code
                            class="text-bold text-primary">.outline-{color}</code> for bordered styles, and <code
                            class="text-bold text-primary">.rounded-pill</code> for softer shapes.
                        <code class="text-bold text-primary">.link-{color}</code> gives a minimal, text-styled button
                        using the theme color.
                    </p>

                    <div class="row mt-2">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.btn-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.outline-{color}</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.rounded-pill</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2">
                                <code class="text-bold text-primary">.link-{color}</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Color #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üé® Color</h2>
                </div>
                <div class="card-body">

                    <p class="p-1">
                        Use <code class="text-bold text-primary">.button-{color}</code> to set both the background and
                        the matching text color, based on your theme variables.
                    </p>

                    <div class="row">
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-primary">
                                <code class="text-bold">.btn-primary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-secondary">
                                <code class="text-bold">.btn-secondary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-tertiary">
                                <code class="text-bold">.btn-tertiary</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-success">
                                <code class="text-bold">.btn-success</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-danger">
                                <code class="text-bold">.btn-danger</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-warning">
                                <code class="text-bold">.btn-warning</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-info">
                                <code class="text-bold">.btn-info</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-light">
                                <code class="text-bold">.btn-light</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-dark">
                                <code class="text-bold">.btn-dark</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-white">
                                <code class="text-bold">.btn-white</code>
                            </div>
                        </div>
                        <div class="col-12 col-4-xs">
                            <div class="card p-2 btn-black">
                                <code class="text-bold">.btn-black</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Note about badge-group #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üìå Note btn-group</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Use <code class="text-bold text-primary">.btn-group</code> to display several button on the same
                        line
                        with consistent spacing.
                        The container automatically:
                    </p>
                </div>
            </div>

            {# Variables #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        These variables control card padding, borders, radius, shadow, and spacing between cards.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr class="text-left">
                                <th>Variable</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td><code class="text-bold text-primary">--card-body-padding</code></td>
                                <td>Padding applied to the <code class="text-bold text-primary">.card-body</code>.</td>
                            </tr>
                            <tr>
                                <td><code class="text-bold text-primary">--card-footer-padding</code></td>
                                <td>Padding applied to the <code class="text-bold text-primary">.card-footer</code>.
                                </td>
                            </tr>
                            <tr>
                                <td><code class="text-bold text-primary">--card-header-padding</code></td>
                                <td>Padding applied to the <code class="text-bold text-primary">.card-header</code>.
                                </td>
                            </tr>
                            <tr>
                                <td><code class="text-bold text-primary">--card-border</code></td>
                                <td>Full border shorthand for style, width, and color.</td>
                            </tr>
                            <tr>
                                <td><code class="text-bold text-primary">--card-border-radius</code></td>
                                <td>Corner radius applied to the card container.</td>
                            </tr>
                            <tr>
                                <td><code class="text-bold text-primary">--card-box-shadow</code></td>
                                <td>Shadow applied around the card.</td>
                            </tr>
                            <tr>
                                <td><code class="text-bold text-primary">--card-group-gap</code></td>
                                <td>Vertical spacing between cards inside a <code class="text-bold text-primary">.card-group</code>.
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
