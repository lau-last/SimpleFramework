{% extends 'base.html.twig' %}

{% block title %}Dialog ‚Äî Demo{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="d-flex fd-column gap-5">

            {# Intro #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üí¨ Dialog</h2>
                </div>
            </div>

            {# Examples #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üí† Examples</h2>
                </div>
                <div class="card-body">
                    <div class="btn-group">
                        <button class="btn btn-tertiary" data-js="dialog" data-target="#modal">
                            Open Dialog Simple
                        </button>
                        <button class="btn btn-tertiary" data-js="dialog" data-target="#modal-first">
                            Open Double Dialog
                        </button>
                    </div>
                </div>
            </div>

            {# HTML Code #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üíª HTML Code</h2>
                </div>
                <div class="card-body">
                    <div class="position-relative">
                        <button class="btn btn-primary position-top-right z-1 mt-1 mr-1"
                                onclick="copyCode('code-dialog', this);">Copy
                        </button>
                        <div data-js="code" id="code-dialog" class="container-code overflow-auto">
                            <!-- Button for open dialog simple -->
                            <button class="btn btn-tertiary" data-js="dialog" data-target="#modal-demo">
                                Open Dialog Simple
                            </button>
                            <!-- Dialog 1 -->
                            <dialog class="dialog" id="modal-demo" aria-modal="true">
                                <div class="dialog-header">
                                    <h3>Dialog Title</h3>
                                </div>
                                <div class="dialog-body">
                                    <p>This is a basic dialog example. You can include any content here.</p>
                                </div>
                                <div class="dialog-footer">
                                    <button class="btn close">Close</button>
                                </div>
                            </dialog>

                            <!-- Button for open double dialog -->
                            <button class="btn btn-tertiary" data-js="dialog" data-target="#second-modal-demo">
                                Open Double Dialog
                            </button>
                            <!-- Dialog 2 -->
                            <dialog class="dialog" id="second-modal-demo" aria-modal="true">
                                <div class="dialog-header">
                                    <h3>First Dialog</h3>
                                </div>
                                <div class="dialog-body border-y">
                                    <p>This is the first dialog.</p>
                                </div>
                                <div class="dialog-footer">
                                    <button class="btn btn-primary close" data-js="dialog" data-target="#modal-second">
                                        Open second dialog
                                    </button>
                                </div>
                            </dialog>
                            <!-- Dialog 3 -->
                            <dialog class="dialog bg-danger border-danger" id="third-modal-demo" aria-modal="true">
                                <div class="dialog-header">
                                    <h3>Second Dialog</h3>
                                </div>
                                <div class="dialog-body">
                                    <p>This is the second dialog.</p>
                                </div>
                                <div class="dialog-footer">
                                    <button class="btn btn-white close">Close</button>
                                </div>
                            </dialog>
                        </div>
                    </div>
                </div>
            </div>

            {# How to use #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>üß© How to use</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        Add <code class="text-bold text-primary">data-js="dialog"</code> to a button and set
                        <code class="text-bold text-primary">data-target</code> to the dialog ID. When clicked, the script opens
                        the dialog and closes it when the user clicks an element with <code class="text-bold text-primary">.close</code>
                        or presses ESC. Add <code class="text-bold text-primary">aria-modal="true"</code> manually for accessibility.
                    </p>
                </div>
            </div>

            {# Variables #}
            <div class="card p-2">
                <div class="card-header">
                    <h2>‚öôÔ∏è Variables CSS</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        These variables control dialog spacing, borders, radius, width and backdrop color.
                    </p>

                    <table class="table">
                        <thead>
                        <tr class="text-left">
                            <th>Variable</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-body-padding</code></td>
                            <td>Padding applied to the <code class="text-bold text-primary">.dialog-body</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-header-padding</code></td>
                            <td>Padding applied to the <code class="text-bold text-primary">.dialog-header</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-footer-padding</code></td>
                            <td>Padding applied to the <code class="text-bold text-primary">.dialog-footer</code>.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-backdrop-color</code></td>
                            <td>Color used for the modal backdrop behind the dialog.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-border</code></td>
                            <td>Border style, width and color applied to the dialog container.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-border-radius</code></td>
                            <td>Corner radius applied to the dialog container.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-padding</code></td>
                            <td>General padding for the dialog container.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">--dialog-width</code></td>
                            <td>Fixed or maximum width of the dialog window.</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            {# Custom events #}
            <div class="card p-2 mt-3">
                <div class="card-header">
                    <h2>üîî Events</h2>
                </div>
                <div class="card-body">
                    <p class="p-1">
                        These custom events let you run code before or after the dialog opens or closes.
                    </p>

                    <table class="table">
                        <thead>
                        <tr class="text-left">
                            <th>Event</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><code class="text-bold text-primary">dialog:beforeOpen</code></td>
                            <td>Fires just before the dialog starts opening.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">dialog:afterOpen</code></td>
                            <td>Fires right after the dialog is fully opened.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">dialog:beforeClose</code></td>
                            <td>Fires just before the dialog starts closing.</td>
                        </tr>
                        <tr>
                            <td><code class="text-bold text-primary">dialog:afterClose</code></td>
                            <td>Fires right after the dialog is fully closed.</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    <dialog class="dialog" id="modal" aria-modal="true">
        <div class="dialog-header">
            <h3>Dialog Title</h3>
        </div>
        <div class="dialog-body">
            <p>This is a basic dialog example. You can include any content here.</p>
        </div>
        <div class="dialog-footer">
            <button class="btn close">Close</button>
        </div>
    </dialog>
    <dialog class="dialog" id="modal-first" aria-modal="true">
        <div class="dialog-header">
            <h3>First Dialog</h3>
        </div>
        <div class="dialog-body border-y">
            <p>This is the first dialog.</p>
        </div>
        <div class="dialog-footer">
            <button class="btn btn-primary close" data-js="dialog" data-target="#modal-second">
                Open second dialog
            </button>
        </div>
    </dialog>
    <dialog class="dialog bg-danger border-danger" id="modal-second" aria-modal="true">
        <div class="dialog-header">
            <h3>Second Dialog</h3>
        </div>
        <div class="dialog-body">
            <p>This is the second dialog.</p>
        </div>
        <div class="dialog-footer">
            <button class="btn btn-white close">Close</button>
        </div>
    </dialog>
{% endblock %}
