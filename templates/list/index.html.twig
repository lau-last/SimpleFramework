                        <tr><td><code class="text-bold text-primary">--list-item-hover-bg-color</code></td><td>Background on hover.</td></tr>
                        <tr><td><code class="text-bold text-primary">--list-item-padding</code></td><td>Default item padding.</td></tr>
                        <tr><td><code class="text-bold text-primary">--list-item-padding-sm</code></td><td>Small item padding.</td></tr>
                        <tr><td><code class="text-bold text-primary">--list-item-padding-md</code></td><td>Medium item padding.</td></tr>
                        <tr><td><code class="text-bold text-primary">--list-item-padding-lg</code></td><td>Large item padding.</td></tr>
                        <tr><td><code class="text-bold text-primary">--list-item-border-width</code></td><td>Item border width.</td></tr>
                        <tr><td><code class="text-bold text-primary">--list-item-border-style</code></td><td>Item border style.</td></tr>
                        <tr><td><code class="text-bold text-primary">--list-item-border-color</code></td><td>Item border color.</td></tr>

